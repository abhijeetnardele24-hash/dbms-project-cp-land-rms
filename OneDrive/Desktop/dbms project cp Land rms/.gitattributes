# Language classification for GitHub
# This ensures GitHub properly recognizes this as a SQL/Database project

# SQL files - Primary project language
*.sql linguist-detectable=true
*.sql linguist-language=SQL
database/*.sql linguist-vendored=false

# Python files - Backend logic
*.py linguist-detectable=true
*.py linguist-language=Python

# Template files - Mark as documentation/generated
*.html linguist-documentation=true
app/templates/**/*.html linguist-documentation=true

# Static files - Mark as vendored/generated
app/static/css/*.css linguist-vendored=true
app/static/js/*.js linguist-vendored=true

# Migration files - Keep as Python
migrations/*.py linguist-detectable=true

# Documentation
*.md linguist-documentation=true
*.txt linguist-documentation=true

# Exclude from language statistics
*.json linguist-detectable=false
*.gitignore linguist-detectable=false
*.env* linguist-detectable=false
